# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgbase=qt5-xmlpatterns
pkgname=qt5-xmlpatterns-ropieee
_qtver=5.12.6
pkgver=${_qtver/-/}
provides=("qt5-xmlpatterns=${pkgver}")
conflicts=('qt5-xmlpatterns')
pkgrel=1
arch=('armv7h')
url='http://qt-project.org/'
license=('GPL3' 'LGPL3' 'FDL' 'custom')
pkgdesc='Support for XPath, XQuery, XSLT and XML schema validation'
depends=('qt5-base')
makedepends=()
conflicts=('qtchooser' 'qt5-xmlpatterns')
groups=('qt' 'qt5')
_pkgfqn="${pkgbase/5-/}-everywhere-src-${_qtver}"
source=("http://download.qt.io/official_releases/qt/${pkgver%.*}/${_qtver}/submodules/${_pkgfqn}.tar.xz")
sha256sums=('76977bc834e6c6118ae2bab31e68ae54843358936b03e432d919ad15cd2184d0')

prepare() {
  mkdir -p build
}

build() {
  cd build

  qmake ../${_pkgfqn}
  make
}

package() {
  cd build
  make INSTALL_ROOT="$pkgdir" install

#  # Drop QMAKE_PRL_BUILD_DIR because reference the build dir
#  find "$pkgdir/usr/lib" -type f -name '*.prl' \
#    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;

  install -d "$pkgdir"/usr/share/licenses
  ln -s /usr/share/licenses/qt5-base "$pkgdir"/usr/share/licenses/${pkgname}
}
